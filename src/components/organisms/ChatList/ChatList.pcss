.chat-list {
  border-right: 1px solid var(--color-border);
  box-sizing: border-box;
  height: 100%;
  list-style: none;
  margin: 0;
  overflow-y: auto;
  padding: 0;
  width: 100%;

  &__search {
    background-color: var(--bg);
    border-bottom: 1px solid var(--color-border);
    padding: .5em;
    position: sticky;
    top: 0;
    z-index: 1;
  }
}
