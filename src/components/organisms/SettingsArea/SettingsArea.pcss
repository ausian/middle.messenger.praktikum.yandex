.settings-area {
    align-items: center;
    background-color: var(--bg);
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    gap: 2em;
    height: 100%;
    justify-content: flex-start;
    margin: 0 auto;
    max-width: 420px;
    padding-top: 2em;
    width: 100%;

    &__top-wrapper {
        align-items: center;
        display: flex;
        flex-direction: column;
        gap: .25em;
        width: 100%;
    }
}
