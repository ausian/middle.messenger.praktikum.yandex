.settings-area {
    align-items: center;
    background-color: var(--bg-elem);
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    height: 100%;
    justify-content: flex-start;
    margin: 0 auto;
    max-width: 420px;
    padding-top: 5em;
    width: 100%;

    &__user-name {
        margin-top: .5em;
    }
}
