.footer {
    align-items: center;
    border-top: 1px solid var(--bg-elem);
    display: flex;
    height: 10%;
    justify-content: center;
    width: 100%;
    background: repeating-linear-gradient(45deg, #000, #000 20px, #fff 20px, #fff 40px);

    &__link {
        background-color: var(--bg-elem);
        border-radius: .5em;
        box-sizing: border-box;
        color: var(--accent);
        cursor: pointer;
        font-weight: 600;
        padding: .25em .5em;
        text-decoration: none;
        border: 2px solid var(--accent);
    }

    & nav ul{
        display: flex;
        gap: .75em;
        height: fit-content;

        & li {
            list-style: none;
        }
    }
}
