.avatar {
    width: 100px;
    height: 100px;
    min-height: 100px;
    border-radius: 50%;
    background-color: var(--bg);
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px solid var(--bg);

    & img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
}