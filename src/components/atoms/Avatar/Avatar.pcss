.avatar {
  align-items: center;
  background-color: var(--color-hide);
  border: 1px solid var(--color-border);
  border-radius: 50%;
  color: var(--bg-elem);
  display: inline-flex;
  flex: 0 0 50px;
  height: 50px;
  justify-content: center;
  overflow: hidden;
  width: 50px;

  &__img {
    height: 100%;
    object-fit: cover;
    width: 100%;
  }

  &__initial {
    font-size: 1em;
    font-weight: 700;
  }
}
