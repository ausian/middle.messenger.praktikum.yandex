.button {
    padding: 0.5em 1.5em;
    font-size: 1em;
    border-radius: var(--radius);
    border: none;
    cursor: pointer;
    box-sizing: border-box;
    background-color: var(--bg);

    &--primary {
        background-color: var(--accent);
        color: var(--bg-elem);
    }

    &--link {
        background-color: transparent;
        color: var(--accent);
        font-weight: 600;
        padding: 0;
    }

    &--icon {
        padding: .5em;
        display: flex;
        align-items: center;
        justify-content: center;
    }
}

.settings-panel {
    &__button {
        background-color: var(--accent);
    
        & svg path {
            stroke: var(--bg-elem);
        }
    }

    & .button--active {
        background-color: var(--bg-elem);
    
        & svg path {
            stroke: var(--accent);
        }
    }
}
