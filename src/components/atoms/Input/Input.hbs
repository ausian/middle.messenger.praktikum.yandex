<div class="input">
    <label for="{{name}}" class="input__label label">{{label}}</label>
    <input
        class="input__control {{class}}"
        type="{{type}}"
        id="{{id}}"
        name="{{name}}"
        placeholder="{{placeholder}}"
        {{#if value }}
            value="{{value}}"
        {{/if}}
        {{#if autocomplete}}
            autocomplete="on"
        {{/if}}
    />
    <span class="input__error label">{{error}}</span>
</div>
