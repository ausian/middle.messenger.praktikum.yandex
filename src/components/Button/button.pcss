.button {
    padding: 0.5em 1.5em;
    font-size: 1em;
    border-radius: var(--radius);
    border: none;
    cursorer: pointer;
    box-sizing: border-box;
    background-color: var(--bg);

    &--primary {
        background-color: var(--accent);
        color: var(--bg-elem);
    }
    &--link {
        background-color: transparent;
        color: var(--accent);
        font-weight: 600;
        padding: 0;
    }
}
