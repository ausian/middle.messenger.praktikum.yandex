.error-banner {
    width: 100%;
    max-width: 420px;
    margin: 0 auto;
    height: 100%;
    box-sizing: border-box;
    display: flex;
    gap: 1em;
    align-items: center;
    flex-direction: column;
    justify-content: center;
    background-color: var(--bg-elem);

    &__message {
        text-align: center;
    }
}