.error-banner {
    align-items: center;
    background-color: var(--bg);
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    gap: 1em;
    height: 100%;
    justify-content: center;
    margin: 0 auto;
    max-width: 420px;
    width: 100%;

    &__message {
        text-align: center;
    }
}
