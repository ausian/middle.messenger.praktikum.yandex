.profile__form {
    display: flex;
    flex-direction: column;
    gap: 1.5em;
    max-width: 420px;
    width: 100%;
}

.profile__actions {
    display: flex;
    flex-flow: row wrap;
    gap: 0.75em;
}

.profile__action-button {
    flex: 1 1 calc(50% - 0.75em);
}

.profile__actions .button--link {
    flex-basis: 100%;
    text-align: center;
}
